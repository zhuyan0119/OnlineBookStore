<div class="order_form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
		<% end %>
		<%= form_tag do %>
			<fieldset>
				<legend>Please Log In</legend>
				<div class = "field">
					<%= label_tag :name, 'Name:' %><br>
					<%= text_field_tag :name, params[:name] %>
				</div>

				<div class = "field">
					<%= label_tag :password, 'Password:' %><br>
					<%= password_field_tag :password, params[:password] %>
				</div>
				<div class = "field">
					<%= submit_tag "Login" %><br>
				</div>
			</fieldset>
		<% end %>
</div>
