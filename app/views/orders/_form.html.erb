<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited
this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, id: :order_name, size: 40 %>
  </div>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address, id: :order_address, row:3, cols: 40 %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, id: :order_email, size: 40 %>
  </div>

  <div class="field">
    <%= f.label :paytype %><br>
    <%= f.select :paytype, Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
  </div>

  <div class="actions">
    <%= f.submit 'Place Order'%>
  </div>
<% end %>
